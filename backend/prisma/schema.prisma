generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String?  @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Facebook connection
  fbUserId   String?  @unique
  fbToken    String?
  fbTokenExp DateTime?
  fbPages    Json?    // Array of pages user has access to

  posts Post[]

  @@map("users")
}

model Post {
  id        String   @id @default(cuid())
  content   String
  mediaUrls String[] @default([])
  status    String   @default("pending") // pending, posted, failed, cancelled
  postFbId  String?  // ID của bài post trên Facebook
  errorMsg  String?  // Lỗi nếu đăng thất bại

  // Scheduling
  scheduledAt DateTime?
  postedAt    DateTime?
  repeatType  String?   // once, daily, weekly

  // Relations
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String
  pageId   String
  pageName String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("posts")
}

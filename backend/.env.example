# ═══════════════════════════════════════
# GenzTech Backend — Environment Variables
# Copy file này thành .env và điền giá trị
# ═══════════════════════════════════════

# Server
PORT=3000
NODE_ENV=production

# Database (Railway PostgreSQL — tự động được set bởi Railway)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# JWT Secret — đổi thành chuỗi ngẫu nhiên dài ít nhất 32 ký tự
JWT_SECRET=change_this_to_a_random_secret_string_at_least_32_chars

# Facebook App (cần để dùng OAuth flow)
# Tạo tại: https://developers.facebook.com/apps/
FB_APP_ID=your_facebook_app_id
FB_APP_SECRET=your_facebook_app_secret
FB_REDIRECT_URI=https://your-domain.up.railway.app/api/facebook/oauth/callback

# Facebook Default Token (dùng cho các route public như find-id, ad-library)
# Lấy từ: https://developers.facebook.com/tools/explorer/
FB_DEFAULT_TOKEN=

# OpenAI (dùng cho tính năng AI generate)
# Lấy tại: https://platform.openai.com/api-keys
OPENAI_API_KEY=
